doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content=info.infoHeader)
    meta(name="author", content="Antorrg. Antonio Ricardo Rodriguez Gramajo")
